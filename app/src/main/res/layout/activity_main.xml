        <TextView
            android:id="@+id/scaleStatus"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_above="@id/messageBar"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/scale_disconnected"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/messageBar"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/barcode_label"
            android:textAlignment="center"
            android:textSize="25sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/submit"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_Scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/conect_scale"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:theme="@style/buttonTheme">

            <Button
                android:id="@+id/btn_list_batch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/list_batch"
                android:theme="@style/buttonTheme" />

            <Button
                android:id="@+id/btn_list_records"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/list_records"
                android:theme="@style/buttonTheme" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>